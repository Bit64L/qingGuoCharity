<script>
    function createGuidedBuyingButtonPage(i, code) {// i表示页号
        var button = document.createElement("button")// 创建button结点
        var text = document.createTextNode("" + i);
        button.appendChild(text);
        button.id = "page" + i;// 设置button属性
        button.setAttribute("class", "btn-page");
        button.setAttribute("onclick", "window.location.href='guidedCommodity?currPage=" + i + "&code=" + code + "'");
        pageList.appendChild(button);// 添加到pageList后面
    }

    $("#commodityCatalog").attr('class', "header-clicked secondline-left");
    var pageList = document.getElementById("pageList");
    var currPage =;
    var totalPages =;

    if (totalPages >= 4) {
        if (currPage < 3) {
            for (var i = 1; i <= 3; i++) {
                createGuidedBuyingButtonPage(i, "${code}");
            }
        } else {
            createGuidedBuyingButtonPage(1, "${code}");
            for (var i = currPage - 1; i <= currPage + 1; i++) {
                createGuidedBuyingButtonPage(i, "${code}");
            }
        }
    } else if (totalPages > 0) {//总页数不足4页
        for (var i = 1; i <= totalPages; i++) {
            createGuidedBuyingButtonPage(i, "${code}");
        }
    }
    if (currPage == 1 || currPage == 0) $("#forward").hide();//善后处理
    if (currPage == totalPages) {
        $("#afterward").hide();
        $("#page" + (currPage + 1)).hide();
    }
    $("#page" + currPage).attr("class", "btn-page-choose");

    function add(uniqueName) {
        var quantity = $("#quantity_" + uniqueName).val();
        addShoppingCart(uniqueName, quantity);
    }

    toOriginStyle("${code}", currPage);

    function toOriginStyle(code, i) {// i表示页号
        $("#glyphicon-list").attr("onclick", "window.location.href='commodityCatalog?currPage=" + i + "&code=" + code + "'");
        //window.location.href="guideCommodity?code="+code+"&page="+page;
    }
</script>
